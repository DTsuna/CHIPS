

&star_job

      load_saved_model = .true.
      saved_model_name = 'after_core_O_burn.mod'

      change_initial_net = .true.      
      new_net_name = 'approx21_cr60_plus_co56.net'

      save_model_when_terminate = .true.
      save_model_filename = 'lgT_9.9.mod'
      required_termination_code_string = 'log_center_temp_limit'
      
      change_v_flag = .true.
      new_v_flag = .true.

      logT_for_conv_vel_flag = 8.5d0
      
      eosDT_use_linear_interp_to_HELM = .true.
      
      set_initial_age = .false.
      set_initial_model_number = .false.

      !pgstar_flag = .false.
      

/ ! end of star_job namelist


&controls

      use_dedt_form_of_energy_eqn = .true.

      use_gold_tolerances = .true. 
      use_eosDT2 = .true.
      use_eosELM = .true.

      gold_tol_max_residual3 = 1d-3
      ignore_too_large_correction = .true. ! for conv_vel's

      num_trace_history_values = 3
      trace_history_value_name(1) = 'center fe56'
      trace_history_value_name(2) = 'rel_E_err'
      trace_history_value_name(3) = 'log_rel_run_E_err'

      center_avg_value_dq = 1d-2

      ! check for retries and backups as part of test_suite
      max_number_backups = 20
      max_number_retries = 110
      max_model_number = 25000

      Dutch_scaling_factor = 0

      log_center_temp_limit = 9.90d0
      when_to_stop_rtol = 1d-3
      when_to_stop_atol = 1d-3
      ignore_species_in_max_correction = .true.
      scale_max_correction = 0.1d0

!      fe_core_infall_limit = 1d5

! timesteps

      delta_lgL_He_limit = -1
      
      min_xa_hard_limit = -1d-4
      min_xa_hard_limit_for_highT = -3d-4
      
      delta_lgRho_cntr_limit = 1.2d-2
      delta_lgT_cntr_limit = 2.0d-3
      
      dX_nuc_drop_limit_at_high_T = 1d-2 ! for center logT > 9.45
      dX_nuc_drop_max_A_limit = 60

      dX_div_X_limit_min_X = 1d-1
      dX_div_X_limit = 5d-2
      dX_div_X_hard_limit = 5d-1
      
      dHe_div_He_limit = -1
         
      burn_steps_limit = 75
      burn_steps_hard_limit = 150


! solver

      op_split_burn = .true.
      op_split_burn_min_T = 1d6
      
      op_split_burn_eps = 1d-7
      op_split_burn_odescal = 1d-8


      photo_interval = 50
      profile_interval = 50
      history_interval = 10
      terminal_interval = 5

      !photo_interval = 10
      !profile_interval = 10
      !history_interval = 1
      !terminal_interval = 1

! FOR DEBUGGING

      !report_hydro_solver_progress = .true. ! set true to see info about newton iterations
      !report_ierr = .true. ! if true, produce terminal output when have some internal error
      !hydro_show_correction_info = .true.
      
      !max_years_for_timestep = 3.67628942044319d-05

      !report_why_dt_limits = .true.
      !report_all_dt_limits = .true.
      !report_hydro_dt_info = .true.
      
      !show_mesh_changes = .true.
      !mesh_dump_call_number = 5189
      !okay_to_remesh = .false.
      
      !trace_evolve = .true.
            

      ! hydro debugging
      !hydro_check_everything = .true.
      !hydro_inspectB_flag = .true.
      !hydro_sizequ_flag = .true.
      
      !hydro_get_a_numerical_partial = -1
      !hydro_test_partials_k = 1
      
      !hydro_numerical_jacobian = .true.
      !hydro_save_numjac_plot_data = .true.
      !hydro_dump_call_number = 4106
      !hydro_dump_iter_number = 5
      !hydro_epsder_struct = 1d-6
      !hydro_epsder_chem = 1d-6

      !trace_newton_bcyclic_solve_input = .true. ! input is "B" j k iter B(j,k)
      !trace_newton_bcyclic_solve_output = .true. ! output is "X" j k iter X(j,k)

      !trace_newton_bcyclic_matrix_input = .true.
      !trace_newton_bcyclic_matrix_output = .true.
      
      !trace_newton_bcyclic_steplo = 1 ! 1st model number to trace
      !trace_newton_bcyclic_stephi = 1 ! last model number to trace
      
      !trace_newton_bcyclic_iterlo = 2 ! 1st newton iter to trace
      !trace_newton_bcyclic_iterhi = 2 ! last newton iter to trace
      
      !trace_newton_bcyclic_nzlo = 1 ! 1st cell to trace
      !trace_newton_bcyclic_nzhi = 10000 ! last cell to trace; if < 0, then use nz as nzhi
      
      !trace_newton_bcyclic_jlo = 1 ! 1st var to trace
      !trace_newton_bcyclic_jhi = 100 ! last var to trace; if < 0, then use nvar as jhi
      
      !trace_k = 0

      !fill_arrays_with_NaNs = .true.
      !stop_for_NaNs = .true.

/ ! end of controls namelist



&pgstar

TRho_logRho_min = 4.5
TRho_logT_min = 8.7

/ ! end of pgstar namelist
